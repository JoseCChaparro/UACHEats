                <div id="hotdog" class="m-hotdog">
                    <p id="category-name">Hotdog</p> 
                </div>
                <div id="platillo" class="m-platillo">
                    <p id="category-name">Platillo</p>
                </div>
                <div id="sushi" class="m-sushi">
                    <p id="category-name">Sushi</p>
                </div>
                <div id="sandwich" class="m-sandwich">
                    <p id="category-name">Sandwich</p>
                </div>
                <div id="baguete" class="m-sincronizada">
                    <p id="category-name">Baguete</p>
                </div>
                <div id="bola_arroz" class="m-sincronizada">
                    <p id="category-name">Bola de arroz</p>
                </div>
                <div id="sincronizada" class="m-sincronizada">
                    <p id="category-name">Sincronizada</p>
                </div>
                <div id="chilaquiles" class="m-chilaquiles">
                    <p id="category-name">Chilaquiles</p>
                </div>
                <div id="frutaVerdura" class="m-frutaVerdura">
                    <p id="category-name">Fruta y Verdura</p>
                </div>
            </div>            
        </div>

        <div class="mobile-footer">
            <p>Home</p>
            <p>Cart</p>
            <p>offers</p>
            <p>orders</p>
        </div>
    </div>
