    <title>UACH-Eats</title>
    <style>
      body {
        font-family: "Roboto", sans-serif;
        font-size: larger;
      }

      .customborder {
        border-radius: 2%;
        border: 4px solid #371e49;
      }
    </style>
</head>
<body>
    <!-- navbar  -->
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #371e49;">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><img src="/images/logo_2.png" width="150" height="60" class="d-inline-block align-top" alt=""></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Menu</a>
          </li>
          <% if(logged){ %>
            <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% }else{ %>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">Signup</a>
              </li>
              <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <!-- navbar end  -->
    <!-- desktop view -->
    <div class="container" id="container">
        <div id="menu">
            <div class="menu-item">
                <a href="#"><%= username %></a><!--Quitar al rato-->
                <a href="#">Acerca de</a>
                <a href="#">Tus órdenes</a>
                <a href="#">Carrito</a>
            </div>
        </div>

        <div id="food-container">
            <div id="header">
                <div class="util">
                    <i class="fa fa-search"> Buscar</i>
                    <i class="fa fa-cart-plus" id="cart-plus"> 0 Productos</i>
                </div>
            </div>
            <div id="food-items" class="d-food-items">
                <div id="burrito" class="d-burrito">
                    <p id="category-name">Burritos</p>    
                </div>

                <div id="montado" class="d-montado">
                    <p id="category-name">Montados</p>    
                </div>

                <div id="mollete" class="d-mollete">
                    <p id="category-name">Molletes</p>
                </div>

                <div id="hamburguesa" class="d-hamburguesa">
                    <p id="category-name">Hamburguesa</p> 
                </div>

                <div id="hotdog" class="d-hotdog">
                    <p id="category-name">Hot-Dog</p> 
                </div>

                <div id="platillo" class="d-platillo">
                    <p id="category-name">Platillo</p>
                </div>

                <div id="torta" class="d-torta">
                    <p id="category-name">Torta</p>
                </div>

                <div id="sushi" class="d-sushi">
                    <p id="category-name">Sushi</p>
                </div>

                <div id="sandwich" class="d-sandwich">
                    <p id="category-name">Sandwich</p>
                </div>
                
                <div id="baguete" class="d-baguete">
                    <p id="category-name">Baguete</p>
                </div>
                
                <div id="bola_arroz" class="d-bola_arroz">
                    <p id="category-name">Bola de arroz</p>
                </div>

                <div id="sincronizada" class="d-sincronizada">
                    <p id="category-name">Sincronizada</p>
                </div>

                <div id="chilaquiles" class="d-chilaquiles">
                    <p id="category-name">Chilaquiles</p>
                </div>

                <div id="frutaVerdura" class="d-frutaVerdura">
                    <p id="category-name">Fruta y Verdura</p>
                </div>



            </div>

            <div id="cart-page" class="cart-toggle">
                <p id="cart-title">Cart Items</p>
                <p id="m-total-amount">Total Amout : 100</p>
                <table>
                    <thead>
                        <td>Producto</td>
                        <td>Nombre</td>
                        <td>Cantidad</td>
                        <td>Precio</td>
                    </thead>
                    <tbody id="table-body">
                        
                    </tbody>
                </table>
                <div class="btn-box">
                    <button class="cart-btn">Checkout</button>
                </div>
            </div>
        </div>

        <div id="cart">
            <div class="taste-header">
                <div class="user">
                    <i class="fa fa-user-circle" id="circle" ></i> Cuenta </i>
                    
                </div>
            </div>
            <div id="category-list">
                <p class="item-menu">Categorías</p>
                <div class="border"></div>                
            </div>
            <div id="checkout" class="cart-toggle">
                <p id="total-item">Total de productos : 5</p>
                <p id="total-price"></p>
                <button class="cart-btn">Checkout</button>
            </div>
        </div>
    </div>


    <!-- mobile view -->
    <div id="mobile-view" class="mobile-view">
        <div class="mobile-top">
            <div class="logo-box">
                <img src="/images/menu/foodielogo.png" alt="" id="logo">
